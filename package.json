{
  "author": "Lucas K Allmon",
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "dependencies": {
    "@mandala-ui/button": "^0.0.14",
    "@mandala-ui/progress-bar": "^0.0.7",
    "@mandala-ui/split-button": "^0.0.6",
    "@mandala-ui/tag": "^0.0.6",
    "coveralls": "^3.0.0",
    "tachyons": "^4.7.4"
  },
  "description": "Mandala is a React based UI kit that uses Functional CSS for styling",
  "devDependencies": {
    "@percy/react": "^0.4.0",
    "@storybook/addon-actions": "^3.2.0",
    "@storybook/addon-info": "^3.2.0",
    "@storybook/addon-knobs": "^3.2.0",
    "@storybook/addon-links": "^3.2.0",
    "@storybook/addon-options": "^3.2.3",
    "@storybook/addon-storyshots": "^3.2.3",
    "@storybook/react": "^3.2.3",
    "@storybook/storybook-deployer": "^2.0.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.2.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-css-modules": "^2.7.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "jest-css-modules": "^1.1.0",
    "lerna": "^2.5.1",
    "nwb": "^0.18.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "airbnb"
    ],
    "globals": {
      "__DEV__": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "rules": {
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "jsx-a11y/href-no-hash": "off",
      "max-len": [
        1,
        120,
        2,
        {
          "ignoreComments": true
        }
      ],
      "react/jsx-filename-extension": "off"
    }
  },
  "files": [
    "css",
    "es",
    "lib"
  ],
  "homepage": "https://mandala-ui.github.io/mandala/",
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/es/**",
      "!**/lib/**",
      "!**/__percy__/**"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/node_modules/jest-css-modules",
      "^react-native$": "react-native-web"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|es|lib|node_modules)[/\\\\]"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "keywords": [
    "react-component"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "name": "mandala",
  "peerDependencies": {
    "react": "15.x"
  },
  "repository": "https://github.com/mandala-ui/mandala",
  "scripts": {
    "build": "nwb build-react-component",
    "build-storybook": "build-storybook -c .storybook -o ./docs/interactive",
    "clean": "nwb clean-module",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "deploy-storybook": "storybook-to-ghpages",
    "prepare": "nwb build-react-component",
    "percy": "react-percy",
    "start": "yarn run storybook",
    "storybook": "start-storybook -p 6006",
    "test": "yarn run jest",
    "test:coverage": "yarn run test -- -- --coverage",
    "test:watch": "yarn run test -- -- --watch"
  },
  "version": "1.1.0"
}
