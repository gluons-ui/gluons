{
  "author": "Lucas K Allmon",
  "babel": {
    "presets": [
      "env",
      "stage-2",
      "react"
    ]
  },
  "dependencies": {
    "@mandala-ui/button": "^1.0.2",
    "@mandala-ui/column": "^1.0.2",
    "@mandala-ui/list": "^1.0.5",
    "@mandala-ui/list-header": "^1.0.0",
    "@mandala-ui/outline-dot": "^1.0.2",
    "@mandala-ui/progress-bar": "^1.0.2",
    "@mandala-ui/split-button": "^1.0.2",
    "@mandala-ui/tag": "^1.0.1"
  },
  "description": "Mandala is a React based UI kit that uses Functional CSS for styling",
  "devDependencies": {
    "@percy/react": "^0.4.0",
    "@storybook/addon-actions": "^3.3.15",
    "@storybook/addon-info": "^3.3.15",
    "@storybook/addon-knobs": "^3.3.15",
    "@storybook/addon-links": "^3.3.15",
    "@storybook/addon-options": "^3.3.15",
    "@storybook/addon-storyshots": "^3.3.15",
    "@storybook/react": "^3.3.15",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-react-percy": "^0.2.0",
    "jest": "^22.4.3",
    "lerna": "^2.9.1",
    "nwb": "^0.21.5",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-test-renderer": "^16.3.0",
    "tachyons": "^4.9.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "react-percy/globals": true
    },
    "extends": [
      "airbnb"
    ],
    "globals": {
      "__DEV__": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "jest",
      "react-percy"
    ],
    "rules": {
      "function-paren-newline": [
        "error",
        "consistent"
      ],
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "jsx-a11y/href-no-hash": "off",
      "max-len": [
        1,
        120,
        2,
        {
          "ignoreComments": true
        }
      ],
      "react/jsx-filename-extension": "off",
      "react/sort-prop-types": ["enabled", {
        "callbacksLast": true,
        "ignoreCase": true,
        "requiredFirst": false,
        "sortShapeProp": true
      }]
    }
  },
  "files": [
    "css",
    "es",
    "lib"
  ],
  "homepage": "https://mandala-ui.github.io/mandala/",
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/es/**",
      "!**/lib/**",
      "!**/__visual-regressions__/**"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/node_modules/jest-css-modules",
      "^react-native$": "react-native-web"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/jestConfig.js",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|es|lib|node_modules)[/\\\\]"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "keywords": [
    "react",
    "css",
    "library",
    "components",
    "interface",
    "functional",
    "OOCSS",
    "declarative",
    "ui",
    "user"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "name": "mandala",
  "peerDependencies": {
    "react": ">=15.x"
  },
  "repository": "https://github.com/mandala-ui/mandala",
  "scripts": {
    "build": "nwb build-react-component",
    "build-storybook": "build-storybook -c .storybook -o ./docs/interactive",
    "clean": "nwb clean-module",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "prepare": "nwb build-react-component",
    "percy": "react-percy",
    "start": "yarn run storybook",
    "storybook": "start-storybook -p 6006",
    "test": "yarn run jest",
    "test:coverage": "yarn run test -- -- --coverage",
    "test:watch": "yarn run test -- -- --watch"
  },
  "version": "1.2.7"
}
